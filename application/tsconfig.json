{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": [
      "src/@types"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
