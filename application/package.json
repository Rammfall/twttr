{
  "name": "application",
  "version": "0.1.0",
  "description": "Backend application of twttr",
  "main": "dist/index.js",
  "scripts": {
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "db:migrate": "npm run typeorm migration:run",
    "db:revert": "npm run typeorm migration:revert",
    "db:reboot": "npm run db:revert && npm run db:migrate",
    "db:migration:create": "npm run typeorm migration:create -n",
    "test": "jest",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "start:dev": "nodemon",
    "eslint": "eslint"
  },
  "keywords": [
    "nodejs",
    "fastify"
  ],
  "author": "rammfall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rammfall/twttr.git"
  },
  "bugs": {
    "url": "https://github.com/Rammfall/twttr/issues"
  },
  "homepage": "https://github.com/Rammfall/twttr#readme",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/bcrypt": "^3.0.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@sentry/node": "^6.7.2",
    "@sentry/tracing": "^6.3.5",
    "ajv": "^6.12.6",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "fastify": "^3.15.1",
    "fastify-formbody": "^5.0.0",
    "fastify-plugin": "^3.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.34",
    "yup": "^0.32.9"
  },
  "volta": {
    "node": "14.16.1",
    "npm": "7.11.2"
  },
  "engines": {
    "node": "14.16.1",
    "npm": "7.11.2"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      ".git",
      "*.test.*",
      "test"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node -r tsconfig-paths/register src/index.ts"
  }
}
