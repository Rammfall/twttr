{
  "name": "application",
  "version": "0.1.0",
  "description": "Backend application of twttr",
  "main": "dist/index.js",
  "scripts": {
    "typeorm": "node -r tsconfig-paths/register --require ts-node/register ./node_modules/typeorm/cli.js",
    "db:migrate": "npm run typeorm migration:run",
    "db:revert": "npm run typeorm migration:revert",
    "db:reboot": "npm run db:revert && npm run db:migrate",
    "db:migration:create": "npm run typeorm migration:create -n",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/src/index.js",
    "start:dev": "nodemon",
    "linter:js": "eslint src/ --max-warnings 0"
  },
  "keywords": [
    "nodejs",
    "fastify"
  ],
  "author": "rammfall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rammfall/twttr.git"
  },
  "bugs": {
    "url": "https://github.com/Rammfall/twttr/issues"
  },
  "homepage": "https://github.com/Rammfall/twttr#readme",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@sentry/node": "^6.16.1",
    "@sentry/tracing": "^6.13.3",
    "@types/jsonapi-serializer": "^3.6.5",
    "@types/jsonwebtoken": "^8.5.6",
    "ajv": "^8.8.2",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.25.3",
    "fastify-cookie": "^5.5.0",
    "fastify-cors": "^6.0.2",
    "fastify-formbody": "^5.2.0",
    "fastify-multipart": "^5.2.1",
    "fastify-plugin": "^3.0.0",
    "jsonapi-serializer": "^3.6.7",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.1.30",
    "otplib": "^12.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.12.0",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "yup": "^0.32.11"
  },
  "volta": {
    "node": "16.6.2",
    "npm": "7.20.6"
  },
  "engines": {
    "node": "16.6.2",
    "npm": "7.20.6"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      ".git",
      "*.test.*",
      "test"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts"
  }
}
