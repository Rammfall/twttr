{
  "name": "application",
  "version": "0.1.0",
  "description": "Backend application of twttr",
  "main": "dist/index.js",
  "scripts": {
    "db:migrate": "npm run typeorm migration:run",
    "db:revert": "npm run typeorm migration:revert",
    "db:reboot": "npm run db:revert && npm run db:migrate",
    "db:migration:create": "npm run typeorm migration:create -n",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc src/index.ts",
    "start": "node -r dotenv/config -r tsconfig-paths/register dist/src/index.js",
    "start:dev": "nodemon",
    "linter:js": "eslint src/ --max-warnings 0",
    "typeorm": "typeorm-ts-node-commonjs --dataSource ./src/initializers/data-source.ts",
    "repl": "ts-node -i -r dotenv/config -r tsconfig-paths/register src/index.ts"
  },
  "keywords": [
    "nodejs",
    "fastify"
  ],
  "author": "rammfall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rammfall/twttr.git"
  },
  "bugs": {
    "url": "https://github.com/Rammfall/twttr/issues"
  },
  "homepage": "https://github.com/Rammfall/twttr#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonapi-serializer": "^3.6.5",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.0",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.1.0",
    "@fastify/csrf-protection": "^6.0.0",
    "@fastify/formbody": "^7.3.0",
    "@fastify/multipart": "^7.2.0",
    "@fastify/swagger": "^8.0.0",
    "@sentry/node": "^7.28.1",
    "@sentry/tracing": "^7.15.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "apollo-server": "^3.10.3",
    "bcrypt": "^5.1.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "fastify": "^4.8.1",
    "fastify-plugin": "^4.3.0",
    "graphql": "^16.6.0",
    "inversify": "^6.0.1",
    "jsonapi-serializer": "^3.6.7",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^4.0.0",
    "otplib": "^12.0.1",
    "pg": "^8.8.0",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.0",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0",
    "validator": "^13.7.0",
    "yup": "^0.32.11"
  },
  "volta": {
    "node": "16.17.0",
    "npm": "8.18.0"
  },
  "engines": {
    "node": "16.17.0",
    "npm": "8.18.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      ".git",
      "*.test.*",
      "test"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts"
  }
}
